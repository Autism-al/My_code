/* pages/Result/Result.wxss */
page{
  background-color:rgba(7,98,193) ;
  height: 100%;
}

.TopBox{
  width: 100%;
  display: flex;
  background: linear-gradient(rgb(0, 174, 255), rgba(7,98,193));
}
.TopPlane{
  width: 100%;
  background-color: #fff;
  border: solid #fff;
  border-radius: 20rpx;
  margin: 10rpx;
}

.ticketList{
  background-color: rgba(7,98,193);
}

.ticketInf{
  width: 93%;
  line-height: 22px;
  display:flex;
  align-items: center;
  background-color: white;
  padding: 5%;
  margin: 3%;
  border-radius: 20rpx;
}

.timePlace{
  flex: 5;
  display: flex;
  align-items: center;
}

.Mid{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.dtimeDplace{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timeInf{
  font-size: 24rpx;
}

.dateInf{
  font-size: 24rpx;
}

.placeInf{
  font-size: 36rpx;
}

.priceInf{
  flex: 2;
  font-size: 60rpx;
  display: flex;
  color: rgb(244, 132, 32);
  align-items: center;
}

.PriceBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rate{
  font-size: 12px;
  padding: 10px;
  color: red;
}

.money{
  font-size: 30rpx;
}

.iconrightArrow{
  font-size: 180rpx;
}
